<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:id="@+id/relativeLayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headerLinearLayout"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web-технологии"
            android:id="@+id/titleTextView"
            android:textSize="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лекция 1"
            android:id="@+id/subtitleTextView"
            android:textSize="20dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timeRelativeLayout"
        android:layout_below="@id/headerLinearLayout"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:background="#fffcf8e3"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18\nсентября"
            android:id="@+id/dateTextView"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="25dp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:00\n22:00"
            android:id="@+id/timeTextView"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_alignTop="@+id/dateTextView"
            android:layout_toRightOf="@+id/dateTextView"
            android:layout_toEndOf="@+id/dateTextView"
            android:layout_toLeftOf="@+id/addToCalendarButton"
            android:layout_toStartOf="@+id/addToCalendarButton"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addToCalendarButton"
            android:src="@drawable/ic_calendar"
            android:scaleType="centerInside"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/timeTextView"/>
    </RelativeLayout>

</RelativeLayout>