<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/tableRowSchedule"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1"
              android:baselineAligned="false"
    >

    <TableRow
        android:id="@+id/dateRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dateRow"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:baselineAligned="true">

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:textSize="18sp"
            android:text="22 июня, пятница"
            android:textColor="@android:color/black"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/todayTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="0.25"
            android:text="@string/today"
            android:gravity="right"
            android:paddingRight="5dp"/>
    </TableRow>

    <RelativeLayout
        android:id="@+id/tableRowScheduleContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#ffffffff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_marginRight="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/timeStartTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="18sp"
                android:singleLine="false"
                android:text="18:00"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#20000000"
                android:layout_below="@+id/timeStartTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/timeEndTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:singleLine="false"
                android:text="21:00"
                android:layout_below="@id/timeStartTextView"
                android:layout_alignParentLeft="true"
                android:autoText="false"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text='Тренинг "Механики командной работы"'
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/subtitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:textSize="18sp"
                android:text="fnodosjnf djoasdjoasjdoiasjdoiasjdoiajs"
                android:gravity="clip_horizontal"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>